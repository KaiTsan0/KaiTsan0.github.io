body {
  background-image: linear-gradient(to right, #FCC9AF, #F5818E);
  background-size: cover;
  z-index: -2;
}

.background-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url("backgroundt.gif");
  background-size: auto;
  background-repeat: repeat;
  background-attachment: fixed;
  z-index: -1;
}

.container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 75%;
  height: 75%; /* Adjust height as needed */
  background-color: white;
  border-radius: 30px; /* Option0al: Add rounded corners */
  box-shadow: 0px 0px 20px rgba(0, 0, 0, .5); /* Optional: Add a shadow */
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

#countdown {
  font-weight: bold;
  font-size: 5vw;
  margin: 10px;
}